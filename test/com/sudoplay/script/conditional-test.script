; conditional test

; ==============================================================================
; switch
; ==============================================================================
local x 0
for i 0 (< i 10) (++ i)
	switch
		case (< i 5)
			++ x
		case (== i 5)
			*= x 5
		default 
			-= x 2
AssertEqual x 17

; ==============================================================================
; switch scope test
; ==============================================================================
= x 0
for i 0 (< i 10) (++ i)
	local z 3
	switch
		case (< i 5)
			+= x z
		case (== i 5)
			*= x 5
		default 
			-= x 2
AssertEqual x 67

; ==============================================================================
; if form:
; 	if (predicate) (do if true) (do if false)
; ==============================================================================
= x 0
for i 0 (< i 10) (++ i)
	if (< i 3) (-- x) (++ x)
AssertEqual x 4

; ==============================================================================
; alternate if form:
; 	if (predicate)
;		do if true
;		do if false
; ==============================================================================
= x 0
for i 0 (< i 10) (++ i)
	if (< i 3) 
		-- x 
		++ x
AssertEqual x 4